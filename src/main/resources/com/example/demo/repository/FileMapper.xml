<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.FileMapper">

  <insert id="insert">
    INSERT INTO file(name, note)
    VALUES(#{name}, #{note})
  </insert>
  
  <select id="selectByPrimaryKey" resultType="File">
    SELECT * FROM file
    WHERE id = #{id}
  </select>
  
  <select id="selectAll" resultType="File">
    SELECT * FROM file
  </select>
  
  <update id="update">
    UPDATE file
    SET name = #{name}, note = #{note}
    WHERE id = #{id}
  </update>
  
  <delete id="deleteByPrimaryKey">
    DELETE FROM file
    WHERE id = #{id}
  </delete>

</mapper>